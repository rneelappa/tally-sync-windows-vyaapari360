{
  "database": {
    "type": "sqlite",
    "filename": "./local-database.db",
    "options": {
      "verbose": true
    }
  },
  "server": {
    "port": 3000,
    "host": "localhost"
  },
  "railway": {
    "api_base": "http://localhost:3000",
    "endpoints": {
      "health": "/api/v1/health",
      "bulk_sync": "/api/v1/bulk-sync",
      "sync_status": "/api/v1/sync-status",
      "metadata": "/api/v1/metadata"
    },
    "company_id": "SKM",
    "division_id": "MAIN",
    "batch_size": 1000,
    "retry_attempts": 3,
    "timeout": 30000
  },
  "tally": {
    "server": "localhost",
    "port": 9000,
    "company": "",
    "fromdate": "auto",
    "todate": "auto",
    "sync": "full",
    "frequency": 0
  },
  "sync": {
    "mode": "full",
    "parallel_processing": true,
    "max_concurrent": 5,
    "temp_directory": "./temp",
    "log_level": "info"
  },
  "database_mapping": {
    "mst_group": {
      "railway_table": "groups",
      "primary_key": "guid",
      "required_fields": ["guid", "name"],
      "sync_priority": 1
    },
    "mst_ledger": {
      "railway_table": "ledgers", 
      "primary_key": "guid",
      "required_fields": ["guid", "name", "parent"],
      "sync_priority": 2
    },
    "mst_stockitem": {
      "railway_table": "stock_items",
      "primary_key": "guid", 
      "required_fields": ["guid", "name"],
      "sync_priority": 3
    },
    "mst_vouchertype": {
      "railway_table": "voucher_types",
      "primary_key": "guid",
      "required_fields": ["guid", "name"],
      "sync_priority": 4
    },
    "mst_unit": {
      "railway_table": "units",
      "primary_key": "guid",
      "required_fields": ["guid", "name"],
      "sync_priority": 5
    },
    "mst_uom": {
      "railway_table": "units",
      "primary_key": "guid",
      "required_fields": ["guid", "name"],
      "sync_priority": 5
    },
    "mst_godown": {
      "railway_table": "godowns",
      "primary_key": "guid", 
      "required_fields": ["guid", "name"],
      "sync_priority": 6
    },
    "trn_voucher": {
      "railway_table": "vouchers",
      "primary_key": "guid",
      "required_fields": ["guid", "voucher_number", "date", "voucher_type"],
      "sync_priority": 10
    },
    "trn_accounting": {
      "railway_table": "accounting_entries",
      "primary_key": "guid",
      "required_fields": ["guid", "voucher_guid", "ledger_name", "amount"],
      "sync_priority": 11
    },
    "trn_inventory": {
      "railway_table": "inventory_entries", 
      "primary_key": "guid",
      "required_fields": ["guid", "voucher_guid", "stock_item_name", "quantity"],
      "sync_priority": 12
    },
    "mst_stockitem": {
      "railway_table": "stock_items",
      "primary_key": "guid",
      "required_fields": ["guid", "name"],
      "sync_priority": 3
    },
    "mst_costcentre": {
      "railway_table": "cost_centres",
      "primary_key": "guid",
      "required_fields": ["guid", "name"],
      "sync_priority": 7
    },
    "mst_currency": {
      "railway_table": "currencies",
      "primary_key": "guid",
      "required_fields": ["guid", "name"],
      "sync_priority": 8
    },
    "mst_company": {
      "railway_table": "companies",
      "primary_key": "guid",
      "required_fields": ["guid", "name"],
      "sync_priority": 9
    },
    "trn_bill": {
      "railway_table": "bills",
      "primary_key": "guid",
      "required_fields": ["guid", "name"],
      "sync_priority": 13
    },
    "trn_payhead": {
      "railway_table": "payheads",
      "primary_key": "guid",
      "required_fields": ["guid", "name"],
      "sync_priority": 14
    },
    "trn_attendance": {
      "railway_table": "attendance",
      "primary_key": "guid",
      "required_fields": ["guid", "employee_name"],
      "sync_priority": 15
    }
  }
}

